{ "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {"menu": {
    "type": "object",
    "properties": {
      "version": {"type": "string"},
      "name": {"type": "string"},
      "food": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string", "enum": [ "Pizza", "Pasta" ] },
            "toppings": {
              "type": "array", "items" : { "type" : "string" }, "uniqueItems": true } },
          "required": ["name"],
          "additionalProperties": false }}}}}}
